  </div>

  <div>
    <%= form.label :written_rule, style: "display: block" %>
    <%= form.textarea :written_rule %>
  </div>

  <div>
    <%= form.label :functional_rule, style: "display: block" %>
    <%= form.textarea :functional_rule %>
  </div>

  <div>
    <%= form.label :example_mitigation, style: "display: block" %>
    <%= form.textarea :example_mitigation %>
  </div>

  <div>
    <%= form.label :example_observation, style: "display: block" %>
    <%= form.textarea :example_observation %>
    <%= form.submit "Test rule", formaction: test_rule_path, data: { turbo_frame: "test_rule" } %>
    <%= turbo_frame_tag 'test_rule' do %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
