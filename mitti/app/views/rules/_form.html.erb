<%= form_with(model: rule) do |form| %>
  <% if rule.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(rule.errors.count, "error") %> prohibited this rule from being saved:</h2>

      <ul>
        <% rule.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
